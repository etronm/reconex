<div class="">
  <%= form_tag where_to_post, :method => :get, id: "search-form" do %>
      <%= content_tag :div, class: "row collapse" do %>
          <%= content_tag :div, class: "small-8 columns" do %>
              <%= text_field_tag :search, params[:search], placeholder: t(:search_label), id: 'search_btn' %>
          <% end %>
          <%= content_tag :div, class: "small-2 columns" do %>
              <span class="postfix"><%= link_to raw("<i class=\"icon-search \"></i>"), '#', class: "block", :onclick => "$('#search-form').submit()".html_safe %></span>
          <% end %>
          <%= content_tag :div, class: "small-2 columns" do %>
            &nbsp;<%= link_to "Clear", '#', onclick: "$('#search_btn').val('');".html_safe, class: 'right inline' %>
          <% end %>
      <% end %>
  <% end %>
</div>
